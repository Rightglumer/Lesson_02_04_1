    <Button fx:id="Prc" text="\%" GridPane.rowIndex="3" GridPane.columnIndex="3" styleClass="action-button" onAction="#btnPrcClick"/>
    <Button fx:id="Div" text="/"  GridPane.rowIndex="3" GridPane.columnIndex="4" styleClass="action-button" onAction="#btnActionClick" />

    <Button fx:id="d7"  text="7"  GridPane.rowIndex="4" GridPane.columnIndex="1" onAction="#btnMainClick"/>
    <Button fx:id="d8"  text="8"  GridPane.rowIndex="4" GridPane.columnIndex="2" onAction="#btnMainClick" />
    <Button fx:id="d9"  text="9"  GridPane.rowIndex="4" GridPane.columnIndex="3" onAction="#btnMainClick" />
    <Button fx:id="Mul" text="x"  GridPane.rowIndex="4" GridPane.columnIndex="4" styleClass="action-button" onAction="#btnActionClick" />

    <Button fx:id="d4"  text="4"  GridPane.rowIndex="5" GridPane.columnIndex="1" onAction="#btnMainClick" />
    <Button fx:id="d5"  text="5"  GridPane.rowIndex="5" GridPane.columnIndex="2" onAction="#btnMainClick" />
    <Button fx:id="d6"  text="6"  GridPane.rowIndex="5" GridPane.columnIndex="3" onAction="#btnMainClick" />
    <Button fx:id="Min" text="-"  GridPane.rowIndex="5" GridPane.columnIndex="4" styleClass="action-button" onAction="#btnActionClick" />

    <Button fx:id="d1"  text="1"  GridPane.rowIndex="6" GridPane.columnIndex="1" onAction="#btnMainClick" />
    <Button fx:id="d2"  text="2"  GridPane.rowIndex="6" GridPane.columnIndex="2" onAction="#btnMainClick" />
    <Button fx:id="d3"  text="3"  GridPane.rowIndex="6" GridPane.columnIndex="3" onAction="#btnMainClick" />
    <Button fx:id="Pls" text="+"  GridPane.rowIndex="6" GridPane.columnIndex="4" styleClass="action-button" onAction="#btnActionClick" />

    <Button fx:id="d0"  text="0"  GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.columnSpan="2" onAction="#btnMainClick"/>
    <Button fx:id="Dot" text=","  GridPane.rowIndex="7" GridPane.columnIndex="3" onAction="#btnMainClick" />
    <Button fx:id="Clc" text="="  GridPane.rowIndex="7" GridPane.columnIndex="4" styleClass="action-button" onAction="#btnActionClick"/>
</GridPane>
