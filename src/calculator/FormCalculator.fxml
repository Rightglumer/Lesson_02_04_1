<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<GridPane hgap="4" vgap="4" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="calculator.Controller">
   <stylesheets>
       <URL value="@/css/style.css" />
   </stylesheets>

    <TextArea fx:id="res" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="4" editable="false"/>

    <TextArea fx:id="txtSubTotal" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3" editable="false" styleClass="txt-SubTotal-Style"/>
    <TextArea fx:id="txtAction" GridPane.rowIndex="2" GridPane.columnIndex="4" editable="false" styleClass="txt-Action-Style"/>

    <Button fx:id="Clr" text="AC" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="clear-button" onAction="#btnClearClick"/>
